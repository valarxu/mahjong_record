/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background-color: #f0f9f0;
}

/* 全局卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
  transition: all 0.3s ease;
  padding: 30rpx;
}

.card:hover {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

/* 全局按钮悬浮效果 */
.btn-hover {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}