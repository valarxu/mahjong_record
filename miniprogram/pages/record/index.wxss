.container {
  padding: 24rpx;
  min-height: 100vh;
}

.record-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 90%;
}

.record-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  font-weight: 500;
  color: #333;
}

.header-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.record-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
  align-items: center;
  column-gap: 6rpx;
}

.record-cell {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
}

.picker {
  padding: 12rpx 20rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
}

.picker.placeholder {
  color: #999;
}

.score-input {
  width: 120rpx;
  height: 58rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin: 0 auto;
  text-align: center;
}

.delete-btn {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  display: inline-block;
}

.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  color: #07c160;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.add-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.total-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 90%;
}

.total-label {
  font-size: 32rpx;
  color: #333;
  margin-right: 16rpx;
}

.total-value {
  font-size: 40rpx;
  font-weight: 500;
}

.positive {
  color: #07c160;
  line-height: 0;
}

.negative {
  color: #ff4d4f;
  line-height: 0;
}

/* 修改底部区域样式 */
.bottom-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 90%;
}

.total-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.total-label {
  font-size: 32rpx;
  color: #333;
  margin-right: 16rpx;
  white-space: nowrap;
}

.total-value {
  font-size: 40rpx;
  font-weight: 500;
  flex: 1;
}

.submit-btn {
  width: 180rpx !important;
  height: 72rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0;
  margin-left: 32rpx;
  flex-shrink: 0;
  display: flex !important;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  background: #e7e7e7;
  color: #999;
}

/* 胜负类型的颜色 */
.type-win {
  color: #34a853;  /* Google 绿色 */
}

.type-lose {
  color: #ea4335;  /* Google 红色 */
}

/* 分数输入框的颜色 */
.score-input.win {
  color: #34a853;
}

.score-input.lose {
  color: #ea4335;
} 