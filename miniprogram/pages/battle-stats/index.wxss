.container {
  padding-top: 24rpx;
  min-height: 100vh;
}

.user-list {
  width: 90%;
}

.user-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  transition: all 0.3s ease;
}

.user-item.expanded {
  padding-bottom: 32rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.user-avatar {
  width: 72rpx;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.expand-text {
  color: #576b95;
  font-size: 28rpx;
}

/* 对战统计内容 */
.stats-content {
  max-height: 0;
  overflow: hidden;
  transition: all 0.3s ease;
  margin-top: 0;
}

.stats-content.show {
  max-height: 1000rpx;
  margin-top: 24rpx;
}

.stats-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-item {
  padding: 16rpx 0;
  border-top: 1rpx solid #f5f5f5;
}

.battle-users {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 0 16rpx;
}

.current-user, .opponent-user {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.current-user {
  text-align: left;
}

.opponent-user {
  text-align: right;
}

.vs {
  font-size: 24rpx;
  color: #999;
  padding: 0 16rpx;
}

.battle-stats {
  padding: 0 16rpx;
}

.stats-numbers {
  text-align: center;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.progress-bar {
  height: 32rpx;
  background: #f7f7f7;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
}

.progress {
  height: 100%;
  transition: width 0.3s ease;
}

.draw {
  background: #ffd666;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-stats {
  display: flex;
  align-items: center;
  gap: 24rpx;
  font-size: 26rpx;
  line-height: 1;
  padding: 4rpx 0;
}

.stat-item {
  color: #666;
  display: inline-flex;
  align-items: center;
  min-width: 80rpx;
  height: 26rpx;
}

.stat-item.win {
  color: #07c160;
}

.stat-item.lose {
  color: #ff4d4f;
}

.stat-item.score {
  min-width: 100rpx;
  line-height: 0;
}

.stat-item.score.positive {
  color: #07c160;
}

.stat-item.score.negative {
  color: #ff4d4f;
}

.progress.win {
  background: #07c160;
}

.progress.lose {
  background: #ff4d4f;
}

/* 添加空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
  width: 100%;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.add-friend-btn {
  width: 200rpx !important;
  height: 80rpx;
  line-height: 80rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
} 