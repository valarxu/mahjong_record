.container {
  padding: 24rpx;
  min-height: 100vh;
}

/* 添加麻友表单 */
.add-form {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  align-items: center;
  width: 90%;
}

.input {
  flex: 1;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input:focus {
  background: #f2f2f2;
}

.add-btn {
  width: 120rpx !important;
  height: 72rpx;
  background: #07c160;
  color: #fff;
  font-size: 28rpx;
  border-radius: 8rpx;
  padding: 0;
  margin: 0;
  display: flex !important;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.add-btn:active {
  opacity: 0.8;
}

.add-btn.disabled {
  background: #e7e7e7;
  color: #999;
}

/* 麻友列表 */
.friend-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 90%;
}

.friend-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f7f7f7;
  gap: 16rpx;
  height: 72rpx;
}

.friend-item:last-child {
  border-bottom: none;
}

.friend-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 400;
  flex: 1;
  min-width: 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 72rpx;
}

.friend-actions {
  display: flex;
  gap: 12rpx;
  flex-shrink: 0;
  margin-left: 24rpx;
  align-items: center;
  height: auto;
}

.action-btn {
  font-size: 24rpx;
  height: 48rpx;
  padding: 0 20rpx;
  background: #f7f7f7;
  border-radius: 24rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  line-height: 1;
}

.action-btn:active {
  opacity: 0.8;
}

.edit {
  color: #576b95;
  background: rgba(87, 107, 149, 0.1);
  line-height: 0;
}

.delete {
  color: #fa5151;
  background: rgba(250, 81, 81, 0.1);
  line-height: 0;
}

.edit-input {
  width: 320rpx;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.loading {
  text-align: center;
  color: #999;
  font-size: 26rpx;
  padding: 32rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 64rpx 0;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 在现有样式基础上添加 */

.friend-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
  height: 100%;
}

.friend-avatar {
  width: 72rpx;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.friend-avatar.editing {
  background: #e7f7ed;
}

/* Emoji选择器 */
.emoji-picker {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
  display: none;
}

.emoji-picker.show {
  display: block;
}

.emoji-content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 32rpx;
}

.emoji-title {
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-bottom: 32rpx;
}

.emoji-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 24rpx;
  padding: 0 24rpx;
}

.emoji-item {
  aspect-ratio: 1;
  background: #f7f7f7;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.emoji-item.selected {
  background: #e7f7ed;
  position: relative;
}

.emoji-item.selected::after {
  content: '';
  position: absolute;
  right: -6rpx;
  top: -6rpx;
  width: 24rpx;
  height: 24rpx;
  background: #07c160;
  border-radius: 50%;
}

.add-avatar {
  width: 72rpx;
  height: 72rpx;
  background: #f7f7f7;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.save {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.cancel {
  color: #576b95;
  background: rgba(87, 107, 149, 0.1);
}

/* 在现有样式底部添加 */
.battle-stats {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
  width: 90%;
}

.stats-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 4rpx solid #07c160;
}

.stats-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
}

.player-a, .player-b {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress-bar {
  flex: 1;
  height: 40rpx;
  background: #f7f7f7;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  display: flex;
}

.progress {
  height: 100%;
  transition: width 0.3s ease;
}

.win {
  background: #07c160;
}

.draw {
  background: #ffd666;
}

.lose {
  background: #ff4d4f;
}

.stats-text {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
} 