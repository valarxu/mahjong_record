.container {
  padding-top: 24rpx;
  min-height: 100vh;
}

.record-list {
  width: 90%;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-total {
  font-size: 32rpx;
  font-weight: 500;
}

.record-details {
  padding-top: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.detail-user {
  font-size: 28rpx;
  color: #333;
}

.detail-score {
  font-size: 28rpx;
  font-weight: 500;
}

.positive {
  color: #07c160;
}

.negative {
  color: #ff4d4f;
}

.loading-section {
  text-align: center;
  padding: 24rpx;
}

.loading, .no-more {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
} 