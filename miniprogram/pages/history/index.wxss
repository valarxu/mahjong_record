.container {
  padding-top: 24rpx;
  padding-bottom: 120rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 操作栏样式 */
.action-bar {
  width: 90%;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20rpx;
}

.action-btn {
  background: #f5f5f5;
  color: #333;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.action-btn-group {
  display: flex;
  gap: 20rpx;
}

.action-btn.primary {
  background: #07c160;
  color: #fff;
}

/* 统计面板样式 */
.stats-panel {
  width: 90%;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.stats-header {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-title {
  font-size: 30rpx;
  font-weight: 500;
}

.stats-close {
  font-size: 32rpx;
  color: #999;
}

.stats-content {
  padding: 20rpx 24rpx;
}

.stats-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.stats-name {
  font-size: 28rpx;
}

.stats-score {
  font-size: 30rpx;
  font-weight: 500;
}

/* 记录列表样式 */
.record-list {
  width: 90%;
}

.record-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.record-header.with-checkbox {
  justify-content: flex-start;
  gap: 20rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-total {
  font-size: 32rpx;
  font-weight: 500;
}

.record-details {
  padding-top: 16rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.detail-user {
  font-size: 28rpx;
  color: #333;
}

.detail-score {
  font-size: 28rpx;
  font-weight: 500;
}

.positive {
  color: #07c160;
}

.negative {
  color: #ff4d4f;
}

.loading-section {
  text-align: center;
  padding: 24rpx;
}

.loading, .no-more {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 底部固定操作栏 */
.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx;
  display: flex;
  justify-content: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.footer-btn {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 30rpx;
}

.footer-btn-group {
  width: 90%;
  display: flex;
  justify-content: space-between;
}

.footer-btn-group .footer-btn {
  width: 48%;
}

.footer-btn.primary {
  background: #07c160;
  color: #fff;
}

.footer-btn.cancel {
  background: #f5f5f5;
  color: #333;
}

/* 统计结果弹窗 */
.stats-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.stats-modal {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.stats-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.stats-modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.stats-modal-close {
  font-size: 36rpx;
  color: #999;
  padding: 0 10rpx;
}

.stats-modal-content {
  padding: 24rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.stats-modal-item {
  display: flex;
  justify-content: space-between;
  padding: 16rpx 0;
}

.stats-modal-name {
  font-size: 30rpx;
}

.stats-modal-score {
  font-size: 30rpx;
  font-weight: 500;
} 